<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:layout_margin="4dp"
    >

    <LinearLayout
        android:id="@+id/contest_detail_view_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffe5e6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_round_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            tools:text="Codeforces Round" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="3 days, 4 hr, 5 min" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/start_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/Start"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date_start"
                        android:layout_width="143dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:textAllCaps="false"
                        android:textStyle="italic"
                        tools:text="01-10-2020 05:00 PM"

                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/End"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textStyle="italic"
                        android:layout_marginLeft="2dp"
                        tools:text="02-10-2020 07:00 PM"
                        android:maxLines="1"
                        android:autoSizeTextType="uniform"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/open_link_in_browser"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="For Share"
                android:backgroundTint="@color/white"
                android:text="Open link "
                android:textAllCaps="false"
                android:drawableLeft="@drawable/vector_open_in_browser"
                app:borderWidth="0dp"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:padding="12dp"

                />

            <Button
                android:id="@+id/set_reminder"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Reminder"
                android:textAllCaps="false"
                android:backgroundTint="@color/white"
                android:contentDescription="For Set Notification"
                android:drawableLeft="@drawable/vector_calendar"
                app:borderWidth="0dp"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:padding="12dp"


                />

            <Button
                android:id="@+id/share_in_whatsapp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textAllCaps="false"
                android:backgroundTint="@color/white"
                android:contentDescription="For Set Reminder"
                android:drawableLeft="@drawable/vector_share"
                app:borderWidth="0dp"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:padding="12dp"
                />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>